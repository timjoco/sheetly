{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/server/*": ["./server/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    "server/server.ts",
    "**/*.ts",
    "**/*.tsx",
    "server/configs/DBConfig.ts",
    "server/controllers/pdfControllers.ts"
  ],
  "exclude": ["node_modules"]
}
